name: Study AI+ - Firebase Emulator (48h Auto Restart)

on:
  # Manual trigger
  workflow_dispatch:

  # Auto trigger every 2 days at 3:00 AM EAT (UTC+3)
  schedule:
    - cron: '0 0 */2 * *'  # 00:00 UTC = 03:00 EAT

jobs:
  run-firebase-emulator:
    runs-on: windows-latest
    timeout-minutes: 2880  # 48 hours

    steps:
      - name: ğŸ“¦ Checkout Code
        uses: actions/checkout@v3

      - name: ğŸ”§ Setup Node.js (v18)
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: ğŸ”¥ Install Firebase CLI
        run: npm install -g firebase-tools

      - name: ğŸ”‘ Authenticate Firebase CLI with Token
        run: |
          echo "Firebase CLI authenticated using token"
        env:
          FIREBASE_TOKEN: ${{ secrets.FIREBASE_TOKEN }}

      - name: â° Conditionally Enforce Time Check for 3AM EAT
        if: github.event_name == 'schedule'
        run: |
          $currentTime = (Get-Date).ToUniversalTime().AddHours(3)
          Write-Output "ğŸ•’ EAT Time: $($currentTime.ToString('HH:mm'))"
          if ($currentTime.Hour -ne 3) {
            Write-Output "âŒ Not 3 AM EAT. Exiting scheduled run..."
            exit 1
          } else {
            Write-Output "âœ… It's 3 AM EAT. Scheduled run proceeds..."
          }

      - name: ğŸš€ Start Firebase Emulators
        run: |
          echo "Starting Firebase Hosting Emulator for Study AI+"
          firebase emulators:start --only hosting --project default

      - name: ğŸ’¤ Keep Emulators Alive for 48 Hours
        run: |
          echo "Sleeping for 48 hours to keep emulator alive..."
          Start-Sleep -Seconds 172800
